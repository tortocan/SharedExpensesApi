{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net6.0/SharedExpensesApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Docker .NET Core Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/SharedExpensesApi.csproj"
            }
        },
        {
            "name": ".NET Core Compose",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "compose-debug",
            "postDebugTask": "down",
            "program": "${workspaceFolder}/bin/Debug/net6.0/SharedExpensesApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ConnectionStrings__DefaultConnection": "Server=localhost;Database=SharedExpences;User=root;Password=example"
            },
            "sourceFileMap": {
                "/api": "${workspaceFolder}"
            }
        }
    ]
}